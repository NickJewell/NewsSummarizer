modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RSS Newsletter Generator"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Check Newsletter"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Verify Enhancement"

[[workflows.workflow]]
name = "RSS Newsletter Generator"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Check Newsletter"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python check_newsletter.py"

[[workflows.workflow]]
name = "Verify Enhancement"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python verify_enhancement.py"

[deployment]
run = ["sh", "-c", "python main.py"]
